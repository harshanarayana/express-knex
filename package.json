{
  "name": "api",
  "version": "1.0.0",
  "description": "NTS Interview - API",
  "author": "Harsha Narayana <harsha2k4@gmail.com>",
  "main": "server.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/src/server.js",
    "watch-node": "nodemon dist/src/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "mocha -r ts-node/register test/**/*.ts",
    "test:coverage": "nyc --reporter=html --reporter=text mocha -r ts-node/register test/**/*.ts",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/src/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "postinstall": "npm run build && knex migrate:latest"
  },
  "dependencies": {
    "@types/body-parser": "1.16.8",
    "@types/bookshelf": "^0.9.8",
    "@types/chai": "^4.1.3",
    "@types/cookie-parser": "^1.4.1",
    "@types/errorhandler": "0.0.32",
    "@types/method-override": "0.0.31",
    "@types/mocha": "^5.2.0",
    "@types/mock-knex": "^0.3.2",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.1.2",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^5.0.0",
    "@types/winston": "^2.3.9",
    "body-parser": "^1.18.3",
    "bookshelf": "^0.13.3",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-jwt": "^5.3.1",
    "google-auth-library": "^1.5.0",
    "istanbul": "^0.4.5",
    "jest": "^22.0.4",
    "jwks-rsa": "^1.2.1",
    "knex": "^0.14.6",
    "mocha": "^5.2.0",
    "mock-knex": "^0.4.0",
    "morgan": "^1.9.0",
    "node-rest-client": "^3.1.0",
    "nodemon": "^1.13.0",
    "nyc": "^11.8.0",
    "passport-google-oauth": "^1.0.0",
    "proxyquire": "^2.0.1",
    "pug": "^2.0.0-rc.4",
    "sinon": "^7.2.6",
    "source-map-support": "^0.5.6",
    "sqlite3": "^4.0.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^6.0.5",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.10.0",
    "typed-rest-client": "^1.0.7",
    "typescript": "^2.7.2",
    "typings": "^2.1.1",
    "winston": "^2.4.2"
  },
  "nyc": {
    "include": [
      "src/**/*.{js,ts,tsx}",
      "config/*.{js,ts,tsx}"
    ],
    "exclude": [
      "**/node_modules/**",
      "src/**/*.d.ts",
      "src/server.ts",
      "src/model/*",
      "src/routes"
    ],
    "extension": [
      ".js",
      ".ts",
      ".tsx"
    ],
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "produceSourceMap": true,
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
